# Define names for default workspaces for which we configure key bindings later on.
# We use variables to avoid repeating the names in multiple places.
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Escape restart

# edit window (you can also use the mouse for that)
mode "win-edit" {
        # change focus
        bindsym $mod+semicolon focus left
        bindsym $mod+slash focus down
        bindsym $mod+bracketleft focus up
        bindsym $mod+apostrophe focus right

        # resize window
        bindsym $mod+Shift+semicolon resize shrink width 5 px or 5 ppt
        bindsym $mod+Shift+slash resize grow height 5 px or 5 ppt
        bindsym $mod+Shift+bracketleft resize shrink height 5 px or 5 ppt
        bindsym $mod+Shift+apostrophe resize grow width 5 px or 5 ppt

        # move focused window
        bindsym $mod+Ctrl+semicolon move left
        bindsym $mod+Ctrl+slash move down
        bindsym $mod+Ctrl+bracketleft move up
        bindsym $mod+Ctrl+apostrophe move right

        # screen move focused window
        bindsym $mod+Ctrl+l move workspace to output left
        bindsym $mod+Ctrl+j move workspace to output down
        bindsym $mod+Ctrl+k move workspace to output up
        bindsym $mod+Ctrl+h move workspace to output right

        # switch to workspace
        bindsym F1 workspace $ws1
        bindsym F2 workspace $ws2
        bindsym F3 workspace $ws3
        bindsym F4 workspace $ws4
        bindsym F5 workspace $ws5
        bindsym F6 workspace $ws6
        bindsym F7 workspace $ws7
        bindsym F8 workspace $ws8
        bindsym F9 workspace $ws9
        bindsym F10 workspace $ws10

        # move focused container to workspace
        bindsym $mod+Shift+1 move container to workspace $ws1
        bindsym $mod+Shift+2 move container to workspace $ws2
        bindsym $mod+Shift+3 move container to workspace $ws3
        bindsym $mod+Shift+4 move container to workspace $ws4
        bindsym $mod+Shift+5 move container to workspace $ws5
        bindsym $mod+Shift+6 move container to workspace $ws6
        bindsym $mod+Shift+7 move container to workspace $ws7
        bindsym $mod+Shift+8 move container to workspace $ws8
        bindsym $mod+Shift+9 move container to workspace $ws9
        bindsym $mod+Shift+0 move container to workspace $ws10

        # back to normal: Enter or Escape or $mod+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym Ctrl+bracketleft mode "default"
        bindsym $mod+e mode "default"

}

bindsym $mod+e mode "win-edit"

# assign window
assign [class="kitty"] $ws2

# application setting(float)
for_window [class="insync"] floating enable, resize set 800 600
for_window [class="Fcitx-config-gtk3"] floating enable, resize set 600 400
for_window [class="mozc_tool"] floating enable, resize set 600 400
for_window [class="feh"] floating enable, resize set 600 400

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
        mode invisible
        position top
        workspace_buttons no
}

# Start up scripts
exec --no-startup-id sudo iw dev wlp2s0 set power_save off
exec --no-startup-id sudo xkeysnail $HOME/.config/xkeysnail/config.py;
exec --no-startup-id xset b off;
exec --no-startup-id xset r rate 180 70;
exec --no-startup-id xrandr --output HDMI-0 --auto --left-of DP-0 --rotate inverted --noprimary && xrandr --output DVI-I-1 --auto --below HDMI-0 --noprimary;
# exec --no-startup-id xrandr --setmonitor main auto DP-0,DVI-I-1,HDMI-0
exec --no-startup-id fcitx-autostart;
exec --no-startup-id $HOME/.config/polybar/lanch.sh;
exec --no-startup-id insync start;
