[colors]
background = #2d2d2d
background-alt = #2d2d2d
foreground = #ffffff
foreground-alt = #55
primary = #ded32e
secondary = #d64937
alert = #d64937

[global/wm]
margin-top = 5
margin-bottom = 5

[bar/example]
top = true
monitor = ${env:MONITOR:DP-0}
width = 100%
height = 34
offset-x = 0
offset-y = 0

background = ${colors.background}
foreground = ${colors.foreground}

overline-size = 0
overline-color = #f00
underline-size = 2
underline-color = #00f

border-bottom-size = 0
border-bottom-color = #333

spacing = 1
padding-left = 2
padding-right = 2
module-margin-left = 1
module-margin-right = 1

font-0 = "Liga Plemol Console NF:size=16:pixelsize=16:fontformat=truetype;0"
font-1 = "Liga Plemol Console NF:size=12:heavy:fontformat=truetype;-2"

modules-left = i3 xwindow tmux docker
modules-center = date
modules-right = filesystem insync cpu memory lan wlan vpn pacman inbox-imap mozc powermenu

[module/xwindow]
type = internal/xwindow
format-prefix = "  "
format-prefix-foreground = ${colors.foreground-alt}
format-underline = #32bbc2
label = %title:0:30:...%

[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock

format-underline = ${colors.secondary}
format-prefix = " "
format-prefix-foreground = ${colors.foreground-alt}

label-layout = %layout%

label-indicator-padding = 2
label-indicator-background = ${colors.secondary}
label-indicator-underline = ${colors.secondary}

[module/filesystem]
type = internal/fs
interval = 180

mount-0 = /
format-mounted-prefix = " "
format-mounted-prefix-foreground = ${colors.foreground-alt}
format-mounted-underline = #30C352
label-mounted = %percentage_free%%
label-unmounted = %mountpoint%:not mounted
label-unmounted-foreground = ${colors.foreground-alt}

[module/i3]
type = internal/i3
index-sort = true

label-mode = %mode%
label-mode-padding = 2
label-mode-foreground = #000
label-mode-background = ${colors.primary}

label-focused = %index%
label-focused-background = ${colors.background-alt}
label-focused-underline = ${colors.primary}
label-focused-padding = 2

label-unfocused = %index%
label-unfocused-padding = 2

label-urgent = %index%!
label-urgent-background = ${colors.alert}
label-urgent-padding = 2

label-visible = %index%
label-visible-foreground = ${colors.foreground-alt}
label-visible-padding = 2

[module/cpu]
type = internal/cpu
interval = 3
format-prefix = " "
format-prefix-foreground = ${colors.foreground-alt}
format-underline = #d64937
label = %percentage%%

[module/memory]
type = internal/memory
interval = 5
format-prefix = " "
format-prefix-foreground = ${colors.foreground-alt}
format-underline = #32bbc2
label = %percentage_used%%

[module/lan]
type = internal/network
interface = enp5s0
interval = 3
accumulate-stats = false

format-connected-prefix = " "
format-connected-prefix-foreground = ${colors.foreground-alt}
format-connected-underline = #9f78e1

label-connected = %upspeed%:%downspeed%
label-disconnected =

[module/wlan]
type = internal/network
interface = wlp2s0
interval = 60
accumulate-stats = false

format-connected-prefix = "直 "
format-connected-prefix-foreground = ${colors.foreground-alt}
format-connected-underline = #9f78e1

label-connected = %essid%:%signal%
label-disconnected =

[module/vpn]
type = custom/script
exec = $HOME/.config/polybar/scripts/vpnstatus.sh
interval = 5
format-prefix = "嬨 "
format-prefix-foreground = ${colors.foreground-alt}
format-underline = #FF8B25

[module/date]
type = internal/date
interval = 15

date = "%Y-%m-%d"
date-alt = " %Y-%m-%d"

time = %H:%M
time-alt = %H:%M:%S

format-prefix = " "
format-prefix-foreground = ${colors.foreground-alt}
format-underline = #3465A4

label = %date% %time%

[module/tmux]
type = custom/script
exec = $HOME/.config/polybar/scripts/info-tmux-sessions.sh
interval = 1
format-prefix = " "
format-prefix-foreground = ${colors.foreground-alt}
format-underline = #30C352

[module/pacman]
type = custom/script
exec = $HOME/.config/polybar/scripts/updates-arch-combined.sh
interval = 1800
format-prefix = " "
format-prefix-foreground = ${colors.foreground-alt}
format-underline = #1994D1

[module/mozc]
type = custom/script
exec = $HOME/.config/polybar/scripts/info-fcitx.sh
interval = 1
format-prefix = " "
format-prefix-foreground = ${colors.foreground-alt}
format-underline = #FF8B25

[module/docker]
type = custom/script
exec = $HOME/.config/polybar/scripts/info-docker.sh
interval = 60
format-prefix = " "
format-prefix-foreground = ${colors.foreground-alt}
format-underline = #1994D1

# [module/insync]
# type = custom/script
# exec = $HOME/.config/polybar/scripts/info-insync.sh
# interval = 10
# format-underline = #FF8B25

