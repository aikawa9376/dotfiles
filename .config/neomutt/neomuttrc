set charset="utf-8"
set send_charset="iso-2022-jp:utf-8"

source ~/personal/mutt.rc
source ~/.config/neomutt/siderc

unmailboxes *
set folder = "imaps://imap.gmail.com:993"
set spoolfile = "+INBOX"
set imap_check_subscribed
set hostname = gmail.com
set sleep_time = 0
set mail_check = 120
set timeout = 300
set imap_keepalive = 300
set read_inc=1000
# set postponed = "+[GMail]/下書き"
# set record = "+[GMail]/送信済み"
set header_cache=~/.neomutt/cache/headers
set message_cachedir=~/.neomutt/cache/bodies
set certificate_file=~/.config/neomutt/certificates
set signature =~/personal/signature
set move = no
set beep = no
set include
set sort = 'threads'
set sort_aux = 'reverse-last-date-received'
set auto_tag = yes
ignore "Authentication-Results:"
ignore "DomainKey-Signature:"
ignore "DKIM-Signature:"
hdr_order Date From To Cc
set pager_index_lines=8
bind editor ^T complete
bind editor <space> noop

# mailcap
alternative_order text/plain text/html *
set mailcap_path = ~/.config/neomutt/mailcap
auto_view text/html

set editor="nvim"

# Vim like binds
bind attach,index,pager \CD next-page
bind attach,index,pager \CU previous-page
bind pager g top
bind pager G bottom
bind attach,index g first-entry
bind attach,index G last-entry
bind pager R group-reply
bind attach,index R group-reply

macro index e "<save-message>+[Gmail]/すべてのメール <enter><enter>" \
"Archive"

# notify-send
set new_mail_command="notify-send --icon=mail-message-new 'New Email' '%n new messages, %u unread.' &"

